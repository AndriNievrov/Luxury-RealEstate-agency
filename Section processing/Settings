# Handler for general text commands described in the buttons
@bot.message_handler()
def info(message):
    if message.text == 'üè† –û—Ä–µ–Ω–¥—É–≤–∞—Ç–∏ –∂–∏—Ç–ª–æ':
        show_properties(message)
    elif message.text == '‚öôÔ∏è F.A.Q':
        show_faq(message)
    elif message.text == 'üìÑ –î–æ–≤—ñ–¥–∫–∞':
        show_help(message)
    elif message.text in ['–ü–µ–Ω—Ç—Ö–∞—É—Å', '–ö–≤–∞—Ä—Ç–∏—Ä–∞', '–ë—É–¥–∏–Ω–æ–∫', '–ö–æ—Ç—Ç–µ–¥–∂']:
        show_property_details(message)
    elif message.text == '‚öôÔ∏è –ü—Ä–æ –Ω–∞—Å':
        bot.send_message(message.chat.id, '–ê–≥–µ–Ω—Ü—ñ—è Luxury RealEstate Agency - –ø—ñ–¥–±–µ—Ä–µ –∫–æ–º—Ñ–æ—Ä—Ç–Ω—É –æ—Å–µ–ª—é –≤–∞–º —Ç–∞ –≤–∞—à—ñ–π —Ä–æ–¥–∏–Ω—ñ!')
    elif message.text == '‚öôÔ∏è –ù–∞—à–∞ –∫–æ–º–∞–Ω–¥–∞':
        bot.send_message(message.chat.id, '–£ –Ω–∞—Å –ø—Ä–∞—Ü—é—î –∫–æ–º–∞–Ω–¥–∞ –ø—Ä–æ—Ñ–µ—Å—ñ–æ–Ω–∞–ª—ñ–≤, —è–∫—ñ –¥–æ–ø–æ–º–æ–∂—É—Ç—å –≤–∞–º –∑–Ω–∞–π—Ç–∏ —ñ–¥–µ–∞–ª—å–Ω–µ –∂–∏—Ç–ª–æ.')
    elif message.text == 'üí≥ –û—Ñ–æ—Ä–º–∏—Ç–∏ –∑–∞–º–æ–≤–ª–µ–Ω–Ω—è' or message.text == '‚úèÔ∏è –ù–∞–ø–∏—Å–∞—Ç–∏ —Ä–æ–∑—Ä–æ–±–Ω–∏–∫—É':
        webbrowser.open('https://t.me/LuxuryRealEstate_bot')
    elif message.text == '‚Ü©Ô∏è –ù–∞–∑–∞–¥':
        show_properties(message)
    elif message.text == '‚Ü©Ô∏è –ù–∞–∑–∞–¥ –≤ –º–µ–Ω—é':
        welcome(message)
    else:
        bot.send_message(message.chat.id, random.choice(answers))


def show_properties(message):
    # Buttons for different property types
    markup = types.ReplyKeyboardMarkup(resize_keyboard=True)
    button1 = types.KeyboardButton('–ü–µ–Ω—Ç—Ö–∞—É—Å')
    button2 = types.KeyboardButton('–ö–≤–∞—Ä—Ç–∏—Ä–∞')
    button3 = types.KeyboardButton('–ë—É–¥–∏–Ω–æ–∫')
    button4 = types.KeyboardButton('–ö–æ—Ç—Ç–µ–¥–∂')
    button5 = types.KeyboardButton('‚Ü©Ô∏è –ù–∞–∑–∞–¥ –≤ –º–µ–Ω—é')
    markup.row(button1, button2)
    markup.row(button3, button4)
    markup.row(button5)

    # Send a message with attached property buttons
    bot.send_message(message.chat.id, '–û—Å—å —É—Å—ñ –≤–∞—Ä—ñ–∞–Ω—Ç–∏ –∂–∏—Ç–ª–∞, —è–∫–µ –∑–∞—Ä–∞–∑ –¥–æ—Å—Ç—É–ø–Ω–µ –¥–ª—è –æ—Ä–µ–Ω–¥–∏:', reply_markup=markup)
