# Handler for the /start command
@bot.message_handler(commands=['start'])
def welcome(message):
    # Create keyboard buttons that appear after entering the /start command
    markup = types.ReplyKeyboardMarkup(resize_keyboard=True)
    button1 = types.KeyboardButton('üè† –û—Ä–µ–Ω–¥—É–≤–∞—Ç–∏ –∂–∏—Ç–ª–æ')
    button2 = types.KeyboardButton('‚öôÔ∏è F.A.Q')
    button3 = types.KeyboardButton('üìÑ –î–æ–≤—ñ–¥–∫–∞')

    # Separate product buttons from other buttons
    markup.row(button1)
    markup.row(button2, button3)

    if message.text == '/start':
        # Send a welcome message
        bot.send_message(
            message.chat.id,
            f'–ü—Ä–∏–≤—ñ—Ç, {message.from_user.first_name}!\n'
            f'–õ–∞—Å–∫–∞–≤–æ –ø—Ä–æ—Å–∏–º–æ –¥–æ Luxury RealEstate Agency! –ó–∞ –¥–æ–ø–æ–º–æ–≥–æ—é –Ω–∞—à–æ–≥–æ —Å–µ—Ä–≤—ñ—Å—É —Ç–∏ –º–æ–∂–µ—à –∑–Ω–∞–π—Ç–∏ —Ç–∞ –æ—Ä–µ–Ω–¥—É–≤–∞—Ç–∏ —Å–≤–æ—î —ñ–¥–µ–∞–ª—å–Ω–µ –∂–∏—Ç–ª–æ.\n'
            f'–ö–æ–Ω—Ç–∞–∫—Ç –∑ –Ω–∞—à–∏–º –∞–≥–µ–Ω—Ç–æ–º: https://t.me/@femalebodyinspect0r',
            reply_markup=markup
        )
    else:
        bot.send_message(message.chat.id, '–ü–µ—Ä–µ–∫–∏–Ω—É–≤ —Ç–µ–±–µ —É –≥–æ–ª–æ–≤–Ω–µ –º–µ–Ω—é! –í–∏–±–∏—Ä–∞–π!', reply_markup=markup).
